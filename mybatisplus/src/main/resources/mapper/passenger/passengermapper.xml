<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="xin.altitude.mybatisplus.mybatisplus.mapper.PassengerMapper">
    <resultMap id="passengerResultMap" type="xin.altitude.mybatisplus.mybatisplus.entity.Passenger">
        <id column="id" property="id"></id>
        <result column="name" property="name"></result>
        <result column="sex" property="sex"></result>
        <result column="birthday" property="birthday"></result>
        <association property="passport" javaType="xin.altitude.mybatisplus.mybatisplus.entity.Passport">
            <id column="passId" property="id"></id>
            <result column="nationality" property="nationality"></result>
            <result column="expire" property="expire"></result>
        </association>
    </resultMap>

    <!--查询乘客信息-->
    <select id="getPassengerInfo" resultMap="passengerResultMap">
         select a.*,b.id as passId,b.nationality,b.expire
         from tb_passenger a,tb_passport b
         where a.id=b.owner and a.id=#{id};
    </select>
</mapper>